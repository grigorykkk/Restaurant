@page "/menu"
@rendermode InteractiveServer
@using Restaurant_site.Models
@using Restaurant_site.Services
@inject MenuService MenuService
@inject CartService CartService

<HomeButton />

<div class="container">
    <h1 class="restaurant-title">Restaurant</h1>

    <div class="content-section">
        <div class="section-card">
            <h2 class="section-title">Menu</h2>
            <div class="section-content">
                <div class="menu-container">
                    <div class="menu-filters">
                        <button class="filter-button @(selectedCategory == MenuCategory.All ? "active" : "")"
                                @onclick='() => FilterMenu(MenuCategory.All)'>
                            Все
                        </button>
                        <button class="filter-button @(selectedCategory == MenuCategory.Appetizers ? "active" : "")"
                                @onclick='() => FilterMenu(MenuCategory.Appetizers)'>
                            Закуски
                        </button>
                        <button class="filter-button @(selectedCategory == MenuCategory.Main ? "active" : "")"
                                @onclick='() => FilterMenu(MenuCategory.Main)'>
                            Основное
                        </button>
                        <button class="filter-button @(selectedCategory == MenuCategory.Desserts ? "active" : "")"
                                @onclick='() => FilterMenu(MenuCategory.Desserts)'>
                            Десерты
                        </button>
                        <button class="filter-button @(selectedCategory == MenuCategory.Drinks ? "active" : "")"
                                @onclick='() => FilterMenu(MenuCategory.Drinks)'>
                            Напитки
                        </button>
                    </div>

                    <div class="menu-items">
                        @foreach (var item in GetFilteredMenu())
                        {
                            <div class="menu-item">
                                <div class="menu-item-header">
                                    <h3>@item.Name</h3>
                                    <span class="menu-price">@item.Price ₽</span>
                                </div>
                                <p class="menu-description">@item.Description</p>
                                <div class="menu-item-actions">
                                    @if (CartService.IsInCart(item.Id))
                                    {
                                        <div class="quantity-controls">
                                            <button class="quantity-button" @onclick="() => DecreaseQuantity(item)">−</button>
                                            <span class="quantity-display">@CartService.GetQuantity(item.Id)</span>
                                            <button class="quantity-button" @onclick="() => IncreaseQuantity(item)">+</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="add-to-cart-button" @onclick="() => AddToCart(item)">
                                            + В корзину
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="navigation-container">
    <Navigation />
</div>

@code {
    private MenuCategory selectedCategory = MenuCategory.All;
    private List<MenuItem> menuItems = new();

    protected override void OnInitialized()
    {
        menuItems = MenuService.GetAllMenuItems();
        CartService.CartChanged += OnCartChanged;
    }

    private void OnCartChanged()
    {
        StateHasChanged();
    }

    private void FilterMenu(MenuCategory category)
    {
        selectedCategory = category;
    }

    private List<MenuItem> GetFilteredMenu()
    {
        return MenuService.GetMenuItemsByCategory(selectedCategory);
    }

    private void AddToCart(MenuItem item)
    {
        CartService.AddToCart(item);
    }

    private void IncreaseQuantity(MenuItem item)
    {
        CartService.AddToCart(item, 1);
    }

    private void DecreaseQuantity(MenuItem item)
    {
        var currentQuantity = CartService.GetQuantity(item.Id);
        CartService.UpdateQuantity(item.Id, currentQuantity - 1);
    }

    public void Dispose()
    {
        CartService.CartChanged -= OnCartChanged;
    }
}
