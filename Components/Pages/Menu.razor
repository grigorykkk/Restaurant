@page "/menu"
@rendermode InteractiveServer
@using Restaurant_site.Services
@inject MenuService MenuService
@inject CartService CartService
@implements IDisposable

<HomeButton />

<div class="container">
    <h1 class="restaurant-title">Restaurant</h1>

    <div class="content-section">
        <div class="section-card">
            <h2 class="section-title">Меню</h2>
            <div class="section-content">
                <div class="menu-container">
                    <div class="menu-filters">
                        <button class="filter-button @(selectedCategoryId == 0 ? "active" : "")"
                                @onclick='() => FilterMenu(0)'>
                            Все
                        </button>
                        @foreach (var dishType in dishTypes)
                        {
                            <button class="filter-button @(selectedCategoryId == dishType.IdDishType ? "active" : "")"
                                    @onclick='() => FilterMenu(dishType.IdDishType)'>
                                @dishType.Title
                            </button>
                        }
                    </div>

                    <div class="menu-items">
                        @foreach (var dish in dishes)
                        {
                            <div class="menu-item">
                                <div class="menu-item-header">
                                    <h3>@dish.Title</h3>
                                    <span class="menu-price">@dish.Cost ₽</span>
                                </div>
                                <p class="menu-description">@dish.Description</p>
                                <div class="menu-item-actions">
                                    @if (CartService.IsInCart(dish.IdDish))
                                    {
                                        <div class="quantity-controls">
                                            <button class="quantity-button" @onclick="() => DecreaseQuantity(dish)">−</button>
                                            <span class="quantity-display">@CartService.GetQuantity(dish.IdDish)</span>
                                            <button class="quantity-button" @onclick="() => IncreaseQuantity(dish)">+</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="add-to-cart-button" @onclick="() => AddToCart(dish)">
                                            + В корзину
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="navigation-container">
    <Navigation />
</div>

@code {
    private int selectedCategoryId = 0;
    private List<DishType> dishTypes = new();
    private List<Dish> dishes = new();

    protected override async Task OnInitializedAsync()
    {
        dishTypes = await MenuService.GetAllDishTypesAsync();
        dishes = await MenuService.GetAllDishesAsync();
        CartService.CartChanged += OnCartChanged;
    }

    private void OnCartChanged()
    {
        StateHasChanged();
    }

    private async Task FilterMenu(int categoryId)
    {
        selectedCategoryId = categoryId;
        dishes = await MenuService.GetDishesByCategoryAsync(categoryId);
    }

    private void AddToCart(Dish dish)
    {
        CartService.AddToCart(dish);
    }

    private void IncreaseQuantity(Dish dish)
    {
        CartService.AddToCart(dish, 1);
    }

    private void DecreaseQuantity(Dish dish)
    {
        var currentQuantity = CartService.GetQuantity(dish.IdDish);
        CartService.UpdateQuantity(dish.IdDish, currentQuantity - 1);
    }

    public void Dispose()
    {
        CartService.CartChanged -= OnCartChanged;
    }
}
