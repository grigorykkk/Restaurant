@page "/address"
@rendermode InteractiveServer

<div class="container">
    <h1 class="restaurant-title">Restaurant</h1>

    <Navigation />

    <div class="content-section">
        <div class="section-card">
            <h2 class="section-title">Address</h2>
            <div class="section-content">
                <div class="address-info">
                    <div class="info-grid">
                        <div class="info-item">
                            <h3>Наш адрес</h3>
                            <p>г. Москва</p>
                            <p>ул. Пушкина, д. 10</p>
                            <p>ТЦ "Центральный", 3 этаж</p>
                        </div>

                        <div class="info-item">
                            <h3>Режим работы</h3>
                            <p>Понедельник - Пятница</p>
                            <p class="work-hours">10:00 - 23:00</p>
                            <p>Суббота - Воскресенье</p>
                            <p class="work-hours">11:00 - 01:00</p>
                        </div>

                        <div class="info-item">
                            <h3>Как добраться</h3>
                            <p>Метро "Тверская"</p>
                            <p>5 минут пешком</p>
                            <p>Парковка: есть</p>
                        </div>
                    </div>

                    <div class="map-placeholder">
                        Карта (интеграция с картами)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
